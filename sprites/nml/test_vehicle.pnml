spriteset(realsprites_veh_truck_test, "sprites/graphics/cabover_truck_test.png") {
  template_truck_16(0, 20)
}

spritegroup sg_veh_truck_test {
    loaded:  [realsprites_veh_truck_test];
    loading: [realsprites_veh_truck_test];
}


switch (FEAT_ROADVEHS, SELF, switch_articulated_truck_test, extra_callback_info1) {
    1: return veh_trailer_test;
    return 0xFF; //stop adding vehicle parts
}

item(FEAT_ROADVEHS, veh_truck_test) {
    property {
        climates_available:             bitmask(CLIMATE_TEMPERATE, CLIMATE_ARCTIC, CLIMATE_TROPICAL);
        introduction_date:              date(1926,01,01);
        cargo_capacity:                 20;
        sprite_id:                      SPRITE_ID_NEW_ROADVEH; //enable new graphics
        speed:                          48 km/h;
        power:                          120 hp;
        weight:                         9.5 ton;
    }
    graphics {
        shorten_vehicle:                5;
        articulated_part:               switch_articulated_truck_test;
        default:                        sg_veh_truck_test;
    }
}


